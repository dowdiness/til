{
  "name": "lambda-crdt-editor-react",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "npm run prebuild:moonbit && concurrently \"npm run server\" \"npm run dev\"",
    "server": "tsx server/ws-server.ts",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prebuild:moonbit": "cd .. && moon build --target js",
    "build:all": "npm run prebuild:moonbit && npm run build",
    "test": "playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "valtio": "^2.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.0",
    "jsdom": "^27.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.17",
    "ws": "^8.16.0"
  }
}
