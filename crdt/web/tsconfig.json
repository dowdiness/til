{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@moonbit/crdt": ["../target/js/release/build/crdt.d.ts"],
      "@moonbit/crdt/moonbit": ["../target/js/release/build/moonbit.d.ts"],
      "@moonbit/graphviz": ["../graphviz/target/js/release/build/browser/browser.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "../target", "../graphviz/target"]
}
